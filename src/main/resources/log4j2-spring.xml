<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="5">
  <Properties>
    <Property name="LOG_PATH">logs</Property>
    <Property name="DEFAULT_PATTERN">[%d{yyyy-MM-dd HH:mm:ss.SSS}] %5p ${sys:PID} --- [%15.15t] %-40.40c{1.} : %m%n%xwEx</Property>
    <Property name="COLOR_PATTERN">[%clr{%d{yyyy-MM-dd HH:mm:ss.SSS}}{faint}] %clr{%5p} %clr{${sys:PID}}{magenta} %clr{---}{faint} %clr{[%15.15t]}{faint} %clr{%-40.40c{1.}}{cyan} %clr{:}{faint} %m%n%xwEx</Property>
  </Properties>

  <Appenders>
    <!-- Console -->
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="${COLOR_PATTERN}" />
      <Filters>
        <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </Console>

    <!-- Error -->
    <RollingFile name="ErrorFile"
                fileName="${LOG_PATH}/error.log"
                filePattern="${LOG_PATH}/error-%d{yyyy-MM-dd}.%i.log.gz"
                append="true">
      <PatternLayout pattern="${DEFAULT_PATTERN}" charset="UTF-8"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10">
        <Delete basePath="${LOG_PATH}" maxDepth="1">
          <IfLastModified age="7d"/>
          <IfAccumulatedFileCount exceeds="10"/>
        </Delete>
      </DefaultRolloverStrategy>
      <Filters>
        <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </RollingFile>

    <!-- Access -->
    <RollingFile name="AccessFile"
                fileName="${LOG_PATH}/access.log"
                filePattern="${LOG_PATH}/access-%d{yyyy-MM-dd}.%i.log.gz"
                append="true">
      <PatternLayout pattern="${DEFAULT_PATTERN}" charset="UTF-8"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10">
        <Delete basePath="${LOG_PATH}" maxDepth="1">
          <IfLastModified age="7d"/>
          <IfAccumulatedFileCount exceeds="10"/>
        </Delete>
      </DefaultRolloverStrategy>
      <Filters>
        <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </RollingFile>

    <!-- SQL -->
    <RollingFile name="SqlFile"
                fileName="${LOG_PATH}/sql.log"
                filePattern="${LOG_PATH}/sql-%d{yyyy-MM-dd}.%i.log.gz"
                append="true">
      <PatternLayout pattern="${DEFAULT_PATTERN}" charset="UTF-8"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10">
        <Delete basePath="${LOG_PATH}" maxDepth="1">
          <IfLastModified age="7d"/>
          <IfAccumulatedFileCount exceeds="10"/>
        </Delete>
      </DefaultRolloverStrategy>
      <Filters>
        <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </RollingFile>

    <RollingFile name="WebSocketFile"
                fileName="${LOG_PATH}/websocket.log"
                filePattern="${LOG_PATH}/websocket-%d{yyyy-MM-dd}.%i.log.gz"
                append="true">
      <PatternLayout pattern="${DEFAULT_PATTERN}" charset="UTF-8"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10">
        <Delete basePath="${LOG_PATH}" maxDepth="1">
          <IfLastModified age="7d"/>
          <IfAccumulatedFileCount exceeds="10"/>
        </Delete>
      </DefaultRolloverStrategy>
      <Filters>
        <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </RollingFile>

    <RollingFile name="DebugFile"
                fileName="${LOG_PATH}/debug.log"
                filePattern="${LOG_PATH}/debug-%d{yyyy-MM-dd}.%i.log.gz"
                append="true">
      <PatternLayout pattern="${DEFAULT_PATTERN}" charset="UTF-8"/>
      <Policies>
        <TimeBasedTriggeringPolicy interval="1"/>
        <SizeBasedTriggeringPolicy size="10MB"/>
      </Policies>
      <DefaultRolloverStrategy max="10">
        <Delete basePath="${LOG_PATH}" maxDepth="1">
          <IfLastModified age="7d"/>
          <IfAccumulatedFileCount exceeds="10"/>
        </Delete>
      </DefaultRolloverStrategy>
      <Filters>
        <ThresholdFilter level="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </RollingFile>

  </Appenders>

  <Loggers>
    <!-- Root -->
    <Root level="INFO">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="ErrorFile"/>
    </Root>

    <!-- Main App -->
    <Logger name="com.rose.back" level="DEBUG" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="AccessFile"/>
      <AppenderRef ref="ErrorFile"/>
      <AppenderRef ref="DebugFile"/>
    </Logger>

    <!-- handler -->
    <Logger name="com.rose.back.global.handler" level="DEBUG" additivity="true">
      <AppenderRef ref="DebugFile"/>
    </Logger>

    <!-- Hibernate SQL -->
    <Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
      <AppenderRef ref="SqlFile"/>
    </Logger>

    <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE" additivity="false">
      <AppenderRef ref="SqlFile"/>
    </Logger>

    <!-- WebSocket -->
    <Logger name="com.rose.back.global.websocket" level="INFO" additivity="false">
      <AppenderRef ref="Console"/>
      <AppenderRef ref="WebSocketFile"/>
    </Logger>
  </Loggers>
</Configuration>
